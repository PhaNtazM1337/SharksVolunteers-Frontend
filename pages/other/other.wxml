
<view class='pa-30'>

  <view class='bz'>
    <view style='height:60rpx'>
      <image class="avatar" src='{{userInfo.avatar_url}}' mode='aspectFill'></image>
    </view>
    <form bindsubmit="formSubmit" report-submit="true">
      <view class='fo-28 ma-t10 bold'>Job Description:</view>
      <view class='border pa-20 ma-t20'>
        <textarea class='fo-28' name='des' value='{{des}}' style='height:{{msg.tagsFilter.length==0?200:100}}rpx' placeholder='Enter description here'></textarea>
        <view class='panel-start wrap'>
          <view class='tags' wx:for="{{msg.tagsFilter}}" data-index='{{index}}' bindtap='tagsClick'>{{item.label}}</view>
        </view>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 '>
        <view class='fo-28 bold'>Location:</view>
        <input class='text-right fo-28'  name='location' bindinput='locationInput' placeholder='Enter location'></input>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 '>
        <view class='fo-28 bold'>Start:</view>
        <view>
          <DatetimePicker mode="dateminute" value="{{hourMinuteSecond1}}" bindchange="selectDateMinuteChange">
            <view class="show-date-time-box">Select {{hourMinuteSecond1}}</view>
          </DatetimePicker>
        </view>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 '>
        <view class='fo-28 bold'>End:</view>
        <view>
          <DatetimePicker2 mode="dateminute" value="{{hourMinuteSecond2}}" bindchange="selectDateMinuteChange2">
            <view class="show-date-time-box">Select {{hourMinuteSecond2}}</view>
          </DatetimePicker2>
        </view>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 ' wx:if="{{title == '校园跑腿'}}">
        <view class='fo-28 bold'>取货地点(必填):</view>
        <input class='text-right fo-28'  name='qi'  placeholder='输入取货地点'></input>
      </view>
